<project name="xtemplate.build" default="build" basedir=".">
    <description>xtemplate Build File</description>

    <property name="component.name" value="xtemplate"/>
    <property name="src.dir" location="./src/"/>

    <import file="../../tools/build-xml/common.xml"/>

    <target name="concat">
        <concat destfile="${component.src.dir.tmp}/xtemplate-pkg.js"
                encoding="${charset}"
                outputencoding="${charset}">
            <fileset dir="${src.dir}" includes="**/*.js"/>
            <filterchain>
                <deletecharacters chars="&#xFEFF;"/>
            </filterchain>
        </concat>
    </target>

    <target name="build" depends="concat,common.build">
    </target>
</project>
