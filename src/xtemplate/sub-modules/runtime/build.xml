<project name="xtemplate/runtime.build" default="build" basedir=".">
    <description>xtemplate runtime Build File</description>

    <property name="component.name" value="xtemplate/runtime"/>

    <import file="../../../../tools/build-xml/common.xml"/>

    <target name="concat">
        <concat destfile="${component.src.dir.tmp}/runtime-pkg.js"
                encoding="${charset}"
                outputencoding="${charset}">
            <fileset dir="${component.src.dir}" includes="**/*.js"/>
            <filterchain>
                <deletecharacters chars="${bom}"/>
            </filterchain>
        </concat>
    </target>

    <target name="build" depends="extract-dependency, concat,common.build">
    </target>
</project>
